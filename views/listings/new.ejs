<% layout ("layouts/boilerplate") %>

<div class="row mt-3">


    <div class="col-8  offset-2">

        <br/><br/>

    <h3>Create a New Listing</h3>
<form method="POST" action="/listings"  novalidate  class="needs-validation"  enctype="multipart/form-data">

        <div class="mb-3">
            
            <label for="Title"  class="from-lable">Title
            </label>

           <input name="listing[title]"  
           placeholder="enter title" 
           type="text"  
           class="form-control"
           required
           />
          <div class="invalid-feedback"> please Enter valid Title </div>
           <div class="valid-feedback">Title Looks good!</div>

        </div>
         
  
          

        <div class="mb-3">

            <label for="description"  class="from-lable">Description
            </label>
             
         <textarea 
          name="listing[description]"  
          class="form-control"
          required ></textarea> 
          
          
         <div class="invalid-feedback"> please Enter a short description </div>
        </div>



        
        <div   class="mb-3">
             <label for="image"  class="from-lable">Upload Listing Image
            </label>
            <input name="listing[image]"   
            type="file"
            class="form-control"
            required 
            > 
            
        </div>
      

        <div class="row">
                 <div   class="mb-3  col-md-4" >
                    <label for="price" 
                     class="from-lable">Price
                    </label>
                  <input name="listing[price]"  
                    placeholder="price" 
                    type="Number"
                    class="form-control"
                    required
                    >  
                    <div class="invalid-feedback"> please Enter a valid price </div>
             </div>


          <div   class="mb-3  col-md-8">
           <label for="country"
            class="from-lable">
             Country
            </label>
            <input name="listing[country]" 
             placeholder="enter country" 
              type="text"
              class="form-control"
              required >

              <div class="invalid-feedback"> please Enter a valid country </div>
     
        </div>

        </div>
  
    
        

        <div    class="mb-3">
             <label for="Location" 
              class="from-lable">Location
             </label>
           <input name="listing[location]" 
             placeholder="enter Location" 
              type="text"  
              class="form-control"
              required >
              <div class="invalid-feedback"> please Enter a valid location </div>
  
        </div>
 
    

        
  
 <br><br>
    
  <button  class="btn btn-dark  add-btn  mt-3">Add</button>
  

</form >
  
</div>

</div>


